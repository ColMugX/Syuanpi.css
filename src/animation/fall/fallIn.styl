@keyframes fallIn
    0%
        opacity: 0
        transform: translateY(-50%)
    100%
        opacity: 1
        transform: none

@keyframes fallInL
    0%
        opacity: 0
        transform: translateY(-20%)
    100%
        opacity: 1
        transform: none

.fallIn
    animation-name: fallIn

.fallIn-light
    animation-name: fallInL
