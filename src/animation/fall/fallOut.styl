@keyframes fallOut
    0%
        opacity: 1
        transform(translateY(0%))
    100%
        opacity: 0
        transform(translateY(50%))

@keyframes fallOutL
    0%
        opacity: 1
        transform(translateY(0%))
    100%
        opacity: 0
        transform(translateY(20%))

.fallOut
    animation-name: fallOut

.fallOut-light
    animation-name: fallOutL
