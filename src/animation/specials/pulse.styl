@keyframes pulse
  from, to
    transform scale3d(1, 1, 1)
  50%
    transform scale3d(1.14, 1.14, 1)

@keyframes pulseBig
  from, to
    transform scale3d(1, 1, 1)
  50%
    transform scale3d(2.5, 2.5, 1)

.pulse
  animation-name pulse
  animation-timing-function ease
.pulse-big
  animation-name pulseBig
  animation-timing-function ease
